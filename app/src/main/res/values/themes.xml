<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Launch_Screen_Theme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Theme_Light_Switch" parent="Theme.AppCompat.Light.NoActionBar">
        <!--draws ActionMode on top of custom Toolbar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/WindowActionMode</item>

        <item name="android:statusBarColor">@color/black_25_transparent</item>

        <item name="iconRefresh">@drawable/ic_menu_refresh</item>
        <item name="iconSave">@drawable/ic_menu_save</item>
        <item name="iconPicture">@drawable/ic_menu_slideshow</item>
        <item name="iconEdit">@drawable/ic_menu_add</item>
        <item name="iconList">@drawable/ic_menu_windows</item>
        <item name="iconBack">@drawable/ic_action_previous_item</item>
        <item name="iconForward">@drawable/ic_action_next_item</item>
        <item name="iconComputer">@drawable/ic_menu_play_clip</item>
        <item name="iconOverflow">@drawable/ic_action_overflow</item>
        <item name="iconSearch">@drawable/ic_menu_search</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionbarStyle">@style/AppActionBar</item>
    </style>

    <style name="Theme_Dark_Switch" parent="Theme.AppCompat.NoActionBar">
        <!--draws ActionMode on top of custom Toolbar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/WindowActionMode</item>
        <item name="android:statusBarColor">@color/black_25_transparent</item>

        <item name="iconRefresh">@drawable/ic_menu_refresh</item>
        <item name="iconSave">@drawable/ic_menu_save</item>
        <item name="iconPicture">@drawable/ic_menu_slideshow</item>
        <item name="iconEdit">@drawable/ic_menu_add</item>
        <item name="iconList">@drawable/ic_menu_windows</item>
        <item name="iconBack">@drawable/ic_action_previous_item_dark</item>
        <item name="iconForward">@drawable/ic_action_next_item_dark</item>
        <item name="iconComputer">@drawable/ic_menu_play_clip</item>
        <item name="iconOverflow">@drawable/ic_action_overflow_dark</item>
        <item name="iconSearch">@drawable/ic_menu_search</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionbarStyle">@style/AppActionBar</item>

    </style>

    <style name="Theme_Black_Switch" parent="@style/Theme_Dark_Switch">
    </style>

    <style name="Theme_Photon_Switch" parent="@style/Theme_Light_Switch">
    </style>

    <style name="WindowActionMode">
        <item name="height">@dimen/toolbar_height_with_divider</item>
        <item name="background">@color/actionModeBackground</item>
    </style>
</resources>